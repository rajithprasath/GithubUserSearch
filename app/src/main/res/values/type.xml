<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Customized typography for selected components-->

    <!--Body 1 (UserItem - details, DetailFragment - details)-->
    <style name="GithubUserSearch.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!-- Body 2 (TextInputLayout Hint) -->
    <style name="GithubUserSearch.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!-- Toolbar Titles -->
    <style name="GithubUserSearch.ToolbarText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>


    <!-- DetailFragment - overview -->
    <style name="GithubUserSearch.OverviewText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textSecondaryColor</item>
    </style>

    <style name="GithubUserSearch.TagLineText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GithubUserSearch.StatusText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/assistiveColor</item>
    </style>


    <!--Headline 5 (UserItem - name)-->
    <style name="GithubUserSearch.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>