<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GithubUserSearch.Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colors-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/textPrimaryColor</item>

        <!--Drawer-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/SpectrumContextualAppBar</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>

        <!--Typography-->
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>


    </style>
</resources>